<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightMode"
    tools:context=".LoginTab">

    <LinearLayout
        android:id="@+id/glassView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp"
        android:orientation="vertical"
        android:background="@drawable/glass">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/welcomeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Barcode-A!"
                android:textSize="20sp"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/green" />

            <ImageView
                android:id="@+id/headerLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="an innovative app designed to help people make informed and healthier food choices."
                android:textAlignment="center"
                android:textSize="14sp"
                android:fontFamily="@font/quicksand_regular"
                android:textColor="@color/green" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="24dp" >

            <EditText
                android:id="@+id/etSignInEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ems="13"
                android:hint="E-mail"
                android:textSize="16sp"
                android:textColorHint="@color/green"
                android:textColor="@color/green"
                android:backgroundTint="@color/green"
                android:fontFamily="@font/quicksand_light"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/etSignInPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ems="13"
                android:hint="Password"
                android:textSize="16sp"
                android:textColorHint="@color/green"
                android:textColor="@color/green"
                android:backgroundTint="@color/green"
                android:fontFamily="@font/quicksand_light"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/ic_visibility_off" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="16dp"
                android:text="Login"
                android:textColor="@color/colorLightMode"
                android:textSize="16sp"
                android:fontFamily="sans-serif-black"
                android:background="@drawable/gradient_button" />

            <TextView
                android:id="@+id/tvSignInRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No Account Yet?"
                android:textSize="11sp"
                android:textColor="@color/green" />

            <Button
                android:id="@+id/btnOpenSignUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:text="SIGN UP"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:fontFamily="sans-serif-black"
                android:backgroundTint="@color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>