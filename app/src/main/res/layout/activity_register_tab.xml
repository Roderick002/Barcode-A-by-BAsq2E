<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightMode"
    tools:context=".RegisterTab">

    <View
        android:id="@+id/glassView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp"
        android:background="@drawable/glass">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp"
        android:padding="32dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvSignUpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="24sp"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/green" />

        <RadioGroup
            android:id="@+id/rdgUserType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:orientation="horizontal"
            android:gravity="center" >

            <RadioButton
                android:id="@+id/rbPersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Personal" />

            <RadioButton
                android:id="@+id/rbManufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manufacturer" />
        </RadioGroup>

        <EditText
            android:id="@+id/etSignUpEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:ems="12"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/green"
            android:textColorHint="@color/green"
            android:backgroundTint="@color/green"/>

        <EditText
            android:id="@+id/etSignUpFirstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:ems="12"
            android:hint="First name"
            android:inputType="text"
            android:textColor="@color/green"
            android:textColorHint="@color/green"
            android:backgroundTint="@color/green" />

        <EditText
            android:id="@+id/etSignUpLastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:ems="12"
            android:hint="Last name"
            android:inputType="text"
            android:textColor="@color/green"
            android:textColorHint="@color/green"
            android:backgroundTint="@color/green" />

        <EditText
            android:id="@+id/etSignUpPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:ems="12"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/green"
            android:textColorHint="@color/green"
            android:backgroundTint="@color/green"
            android:drawableEnd="@drawable/ic_visibility_off"/>

        <EditText
            android:id="@+id/etSignUpConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:ems="12"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/green"
            android:textColorHint="@color/green"
            android:backgroundTint="@color/green"
            android:drawableEnd="@drawable/ic_visibility_off"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:layout_margin="32dp"
            android:text="Sign Up"
            android:textColor="@color/colorLightMode"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/gradient_button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>